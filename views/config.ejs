<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/css/bootstrap.css' />
    <link rel='stylesheet' href='/css/bootstrap-grid.css' />
    <link rel='stylesheet' href='/css/bootstrap-reboot.css' />
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark navbar-expand">
      <a class="navbar-brand" href="#">PiPot</a>
      <div id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item ">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/table">Table</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/config">Config <span class="sr-only">(current)</span></a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <form method="post" action="/config">
        <div class="form-group">
          <label for="exampleFormControlSelect1">Save Passwords</label>
          <select class="form-control" name="save-password">
            <option>False</option>
            <option>True</option>
          </select>
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Show Passwords</label>
          <select class="form-control" name="show-password">
            <option>False</option>
            <option>True</option>
          </select>
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Select Network</label>
          <select class="form-control" name="network">
            <% networks.forEach(function(network) { %>
              <option><%=network%></option>
            <% }); %>
          </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>


  </body>
</html>
